<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Appraisal System</title>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <style>
        .input-field label {
            color: black !important;
        }

        .input-field input {
            color: black !important;
        }

        .input-field input:focus+label {
            color: black !important;
        }

        i.fa {
            color: black;
        }

        input[type=button] {
            color: purple;
        }

        li a.sideNavPadding {
            padding: 0 16px;
        }

        .icon_style {
            position: absolute;
            right: 10px;
            top: 10px;
            font-size: 20px;
            color: white;
            cursor: pointer;
        }

        #overview {
            margin-bottom: 1.5%;

        }

        .collapsible-header {
            display: block;
        }

        footer {
            display: flex;
            min-height: 41vh;
            flex-direction: column;
        }

        body {
            display: flex;
            min-height: 100vh;
            flex-direction: column;
        }

        main {
            flex: 1 0 auto;
        }

        .tabs .tab a {
            color: #000;
        }

        /*Black color to the text*/

        .tabs .tab a:hover {
            background-color: rgb(223, 177, 220);
            color: rgb(255, 255, 255);
        }

        /*Text color on hover*/

        .tabs .tab a.active {
            background-color: rgb(203, 155, 207);
            color: rgb(0, 0, 0);
        }

        /*Background and text color when a tab is active*/

        .tabs .indicator {
            background-color: rgb(151, 64, 147);
        }

        @media only screen and (max-width: 992px) {

            table.responsive-table thead,
            table.responsive-table thead tr {
                display: block;
                float: left;
            }
        }
    </style>

</head>

<body>
    <header>{{> _navbar}}</header>
    <main>
        <div class="container">
            {{> _msg}}
            {{> _errors}}
            {{{body}}}
            <br>
        </div>
    </main>
    <footer class="page-footer grey darken-3">{{> _footer}}</footer>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-beta/js/materialize.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"
        integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script>
        // Side bar initialization
        $(document).ready(function () {
            $('.sidenav').sidenav();
            $('.collapsible').collapsible();
        });
        // Dropdown initialization
        $(".dropdown-trigger").dropdown({
            constrainWidth: false,
            coverTrigger: false,
            hover: true
        });

        // Form select option initialization
        $(document).ready(function () {
            $('select').formSelect();
        });
        $(document).ready(function () {
            $('select').material_select();
        });

        // Date format initialization
        $(document).ready(function () {
            $('.datepicker').datepicker();
            $('#datepicker').datepicker({
                yearRange: 10,
                format: 'yyyy'
                //setDate: new Date()
            });
            $('#moocs_date, #published_date, #swayam_date').datepicker({
                format: 'mmmm yyyy'
                //setDate: new Date()
            });
            //var datepicker = document.getElementById('datepicker');
            //var instance = M.Datepicker.getInstance(datepicker);
            //instance.setDate(new Date());
        });
        $('.tooltipped').tooltip();
        $('button').addClass('purple');

        //ack checkbox validation
        $('#indeterminate-checkbox').click(function () {
            //check if checkbox is checked
            if ($(this).is(':checked')) {

                $('#submit_btn').removeAttr('disabled'); //enable input

            } else {
                $('#submit_btn').attr('disabled', true); //disable input
            }
        });
        $('#indeterminate-checkbox-overview').click(function () {
            //check if checkbox is checked
            if ($(this).is(':checked')) {

                $('#submit_btn_overview').removeAttr('disabled'); //enable input

            } else {
                $('#submit_btn_overview').attr('disabled', true); //disable input
            }
        });

        $(document).ready(function () {
            $('.tabs').tabs();
        });

        //Collapsable div initialization
        $(document).ready(function () {
            $('.collapsible').collapsible();
        });
        $('#alert_close').click(function () {
            $("#alert_box").fadeOut("slow", function () {
            });
        });

    </script>

</body>

</html>