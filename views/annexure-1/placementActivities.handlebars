<h5>Annexure 1</h5><br>
<div class="container">
    <h6>1.7 Placement Activities</h6>
    <hr>
    {{#if result}}
    {{#each result}}
    <div class="row" id="placementActivities">
        <div class="row">
            <div class="input-field col s6 md5">
                <select name="placement_role">
                    <option value="{{placement_role}}" disabled selected>{{placement_role}}</option>
                    <option value="tpo">TPO</option>
                    <option value="dept coordinator">Dept Co-ordinator</option>
                </select>
                <label for="">Role</label>
            </div>
            <div class="input-field col s6 md5">
                <input id="no-of-companies" type="number" name="no_of_companies" value="{{placement_role}}"
                    class="validate" required>
                <label for="no-of-companies">Companies Visited &nbsp; <a href="#" class="tooltipped"
                        data-tooltip="Number of companies visited"><i class="fa fa-info-circle"></i></a></label>
            </div>
        </div>

        <div class="row">

            <div class="input-field col s6 md5">
                <input id="no-of-placed-students" type="number" name="no_of_placed_students"
                    value="{{no_of_placed_students}}" class="validate" required>
                <label for="no-of-placed-students">Students Placed &nbsp; <a href="#" class="tooltipped"
                        data-tooltip="Number of students placed"><i class="fa fa-info-circle"></i></a></label>
            </div>



            <div class="input-field col s6">
                <select name="department">
                    <option value="{{department}}" disabled selected>{{department}}</option>
                    <option value="Information Technology">Information Technology</option>
                    <option value="Computer Engineering">Computer Engineering</option>
                    <option value="Mechanical Engineering">Mechanical Engineering</option>
                    <option value="Civil Engineering">Civil Engineering</option>
                    <option value="EXTC Engineering">EXTC Engineering</option>
                </select>
                <label for="">Department</label>
            </div>
        </div>
        <a href="/annexure-1/placementActivities/edit/{{id}}"
            class="btn waves-effect waves-light red center mb-2">Edit</a>
        <a href="/users/faculty/facultyOverview" class="btn waves-effect waves-light purple center mb-2">Back to
            overview</a><br><br>
        <form method="post" action="/annexure-1/placementActivities/delete/{{id}}?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn waves-effect waves-light center red white-text" value="Delete">
        </form>
    </div>
</div>
{{else}}
{{/each}}
