<h5>Category 1</h5><br>
<div class="container">
    <h6>1.3 Additional Resources</h6>
    <hr>

    {{#if result}}
    {{#each result}}
    <div class="row" id="additionalResources">
        <h6><strong>Enter the materials prepared by you (PPTs, handouts)</strong></h6>
        <div class="row">
            <div class="input-field col s12">
                <textarea name="materials" id="materials" class="materialize-textarea validate" disabled>{{materials}}</textarea>
                <label for="materials">Materials Prepared</label>
            </div>
        </div>

        <h6><strong>Score</strong></h6>
        <div class="row">
            <div class="input-field col s6">
                <input type="number" name="scoreThree" id="scoreThree" 
                    value="{{scoreThree}}" class="validate" disabled max="20">
                <label for="scoreThree">Enter the Score (Max: 20)</label>
            </div>
            <div class="input-field col s6">
                <a href="/pdfs/help.pdf" target="_blank" class="btn waves-effect waves-light blue">
                    Help <i class="material-icons right">help_outline</i>
                </a>
            </div>
        </div>

        <a href="/annexure-1/additionalResources/edit/{{id}}" 
            class="btn waves-effect waves-light red center mb-2">Edit</a>
        <a href="/users/faculty/facultyOverview" 
            class="btn waves-effect waves-light purple center mb-2">Back to overview</a><br><br>
        <form method="post" action="/annexure-1/additionalResources/delete/{{id}}?_method=DELETE">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn waves-effect waves-light center red white-text" value="Delete">
        </form>
    </div>
    </div>
    {{else}}
    {{/each}}
    {{else}}

    {{#if editResult}}
    <div class="row" id="additionalResources">
        <form action="/annexure-1/additionalResources/{{editResult.id}}?_method=PUT" method="post" class="col s12">
            <input type="hidden" name="_method" value="PUT">

            <h6><strong>Enter the materials prepared by you (PPTs, handouts)</strong></h6>
            <div class="row">
                <div class="input-field col s12">
                    <textarea name="materials" id="materials" class="materialize-textarea validate" required>{{editResult.materials}}</textarea>
                    <label for="materials">Materials Prepared</label>
                </div>
            </div>

            <h6><strong>Score</strong></h6>
            <div class="row">
                <div class="input-field col s6">
                    <input type="number" name="scoreThree" id="scoreThree" 
                        value="{{editResult.scoreThree}}" class="validate" required max="20">
                    <label for="scoreThree">Enter the Score (Max: 20)</label>
                </div>
                <div class="input-field col s6">
                    <a href="/pdfs/help.pdf" target="_blank" class="btn waves-effect waves-light blue">
                        Help <i class="material-icons right">help_outline</i>
                    </a>
                </div>
            </div>

            <div>
                <p>
                    <label>
                        <input id="indeterminate-checkbox" type="checkbox" required />
                        <span>I acknowledge that the above-filled information is verified and justified by me.</span>
                    </label>
                </p>
            </div>
            <button class="btn waves-effect waves-dark" id="submit_btn" type="submit" disabled>Submit</button>
        </form>
    </div>

    {{else}}

    <div class="row" id="additionalResources">
        <form action="/annexure-1/additionalResources" method="post" class="col s12">
            <h6><strong>Enter the materials prepared by you (PPTs, handouts)</strong></h6>
            <div class="row">
                <div class="input-field col s12">
                    <textarea name="materials" id="materials" class="materialize-textarea validate" required></textarea>
                    <label for="materials">Materials Prepared</label>
                </div>
            </div>

            <h6><strong>Score</strong></h6>
            <div class="row">
                <div class="input-field col s6">
                    <input type="number" name="scoreThree" id="scoreThree" 
                        class="validate" required max="20">
                    <label for="scoreThree">Enter the Score (Max: 20)</label>
                </div>
                <div class="input-field col s6">
                    <a href="/pdfs/help.pdf" target="_blank" class="btn waves-effect waves-light blue">
                        Help <i class="material-icons right">help_outline</i>
                    </a>
                </div>
            </div>

            <div>
                <p>
                    <label>
                        <input id="indeterminate-checkbox" type="checkbox" required />
                        <span>I acknowledge that the above-filled information is verified and justified by me.</span>
                    </label>
                </p>
            </div>
            <button class="btn waves-effect waves-dark" id="submit_btn" type="submit" disabled>Submit</button>
        </form>
    </div>
</div>
{{/if}}
{{/if}}
