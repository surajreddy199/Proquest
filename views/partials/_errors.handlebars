{{#if error}}
<div class="row" id="alert_box">
    <div class="col s12 m12">
        <div class="card red lighten-1">
            <div class="row">
                <div class="col s12 m10">
                    <div class="card-content white-text">
                        <p>{{error}}</p>
                    </div>
                </div>
                <div class="col s12 m2">
                    <i class="fa fa-times icon_style white-text" id="alert_close" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</div>
{{/if}}

{{#if errors}}
<div class="row" id="alert_box">
    <div class="col s12 m12">
        <div class="card red lighten-1">
            <div class="row">
                <div class="col s12 m10">
                    <div class="card-content white-text">
                        {{#each errors}}
                        <p>{{text}}</p>
                        {{else}}
                        {{/each}}
                    </div>
                </div>
                <div class="col s12 m2">
                    <i class="fa fa-times icon_style white-text" id="alert_close" aria-hidden="true"></i>
                </div>
            </div>
        </div>
    </div>
</div>
{{else}}
{{/if}}