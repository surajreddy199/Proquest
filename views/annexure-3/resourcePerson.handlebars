<h5>Annexure 3</h5><br>
<div class="container">
    <h6>3.1 Resource Person in STTP/Training Course/Lecture Talks</h6>
    <hr>
    {{#if result}}
    {{#each result}}
    <div class="row">
        <div class="input-field col s6 md5">
            <input id="topicName" type="text" name="topicName" value="{{topicName}}" disabled class="validate" required>
            <label for="topicName">Topic Name</label>
        </div>

        <div class="input-field col s6 md5">
            <select name="department">
                <option value="{{department}}" selected>{{department}}</option>
                <option value="Information Technology" disabled>Information Technology</option>
                <option value="Computer Engineering" disabled>Computer Engineering</option>
                <option value="Mechanical Engineering" disabled>Mechanical Engineering</option>
                <option value="Civil Engineering" disabled>Civil Engineering</option>
                <option value="EXTC Engineering" disabled>EXTC Engineering</option>
            </select>
            <label for="">Department</label>
        </div>
    </div>


    <div class="row">

        <div class="input-field col s6 md5">
            <input id="nameofInstitute" type="text" name="nameofInstitute" value="{{nameofInstitute}}" disabled
                class="validate" required>
            <label for="nameofInstitute">Name Of Institute</label>
        </div>

        <div class="input-field col s6 md5">
            <input id="numberofParticipants" type="number" name="numberofParticipants" value="{{numberofParticipants}}"
                disabled class="validate" required>
            <label for="numberofParticipants">No. of Participants &nbsp; <a href="#" class="tooltipped"
                    data-tooltip="Number of Participating students"><i class="fa fa-info-circle"></i></a></label>
        </div>

    </div>
    <a href="/annexure-3/resourcePerson/edit/{{id}}" class="btn waves-effect waves-light red center mb-2">Edit</a>
    <a href="/users/faculty/facultyOverview" class="btn waves-effect waves-light purple center mb-2">Back to
        overview</a><br><br>
    <form method="post" action="/annexure-3/resourcePerson/delete/{{id}}?_method=DELETE">
        <input type="hidden" name="_method" value="DELETE">
        <input type="submit" class="btn waves-effect waves-light center red white-text" value="Delete">
    </form>
</div>
</div>
</div>
{{else}}
{{/each}}
